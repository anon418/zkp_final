{
  "name": "zkp-voting-platform",
  "version": "2.0.0",
  "description": "ZKP 기반 익명 투표 시스템 (VotingV2 + WSL 통합)",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:full": "npm run build:zkp && npm run build:blockchain && next build",
    "build:zkp": "npx ts-node scripts/zkp/build-v1.2.ts",
    "build:blockchain": "npx hardhat compile",
    "start": "next start",
    "lint": "next lint",
    "test": "npm run test:blockchain && npm run test:zkp",
    "test:backend": "node scripts/backend/smoke-test.js",
    "test:blockchain": "npx hardhat test test/blockchain",
    "test:zkp": "npx ts-node scripts/zkp/smoke.ts",
    "deploy:verifier": "npx hardhat run scripts/zkp/deploy.ts --network sepolia",
    "deploy:v2": "npx hardhat run scripts/blockchain/deploy-v2.js --network sepolia",
    "deploy:all": "npm run deploy:verifier && npm run deploy:v2",
    "proof:server": "npx ts-node src/lib/zkp/proof-cli/server.ts --port 8787 --wasm build/v1.2/vote_js/vote.wasm --zkey build/v1.2/vote_final.zkey --verbose",
    "export:evidence": "npx ts-node scripts/zkp/export-evidence.ts",
    "smoke": "node scripts/backend/smoke-test.js",
    "check:env": "npx ts-node --project tsconfig.scripts.json scripts/check-env.ts"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "@types/express": "^5.0.5",
    "body-parser": "^2.2.0",
    "circomlib": "^2.0.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "ethers": "^6.15.0",
    "express": "^5.1.0",
    "mongodb": "^6.5.0",
    "mongoose": "^8.5.0",
    "next": "^15.5.4",
    "p-queue": "^9.0.0",
    "prom-client": "^15.1.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-qr-code": "^2.0.18",
    "snarkjs": "^0.7.5",
    "uuid": "^9.0.1",
    "zod": "^3.23.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@ethersproject/providers": "^5.8.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.1.0",
    "@typechain/ethers-v5": "^10.2.1",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.20",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.14",
    "@types/minimist": "^1.2.5",
    "@types/mocha": "^9.1.1",
    "@types/node": "^20.19.19",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^9.0.8",
    "axios": "^1.13.2",
    "chai": "^4.5.0",
    "circomlibjs": "^0.1.7",
    "eslint": "^9",
    "eslint-config-next": "^15.5.4",
    "hardhat": "^2.13.0",
    "hardhat-gas-reporter": "^1.0.10",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "minimist": "^1.2.8",
    "solidity-coverage": "^0.8.16",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
